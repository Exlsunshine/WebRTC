<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actionVideoButtons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="7dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >

    <ToggleButton
        android:id="@+id/cameraToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_videocam"
        android:checked="true"
        android:textOff=""
        android:textOn="" />

    <ToggleButton
        android:id="@+id/dynamicToggleVideoCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_dynamic_on"
        android:checked="true"
        android:textOff=""
        android:textOn="" />

    <ToggleButton
        android:id="@+id/micToggleVideoCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_mic_on"
        android:checked="true"
        android:gravity="center_vertical|center_horizontal"
        android:textOff=""
        android:textOn="" />

    <ImageButton
        android:id="@+id/handUpVideoCall"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@android:color/holo_red_dark"/>

</LinearLayout>